              <% } %>
              <button class="delete" formaction="/removetask/<%= taskKey %>">&#128465;</button>
              <button class="check" formaction="/check">‚úîÔ∏è</button>
            </li>
            <% } %>
        <% } %>

      </ul>

      <label for="nieuwe-taak">Volbracht</label>
      <ul class="complete">
